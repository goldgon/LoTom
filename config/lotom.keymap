#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>
#include "keycode_japanese.h"


#define ZMK_POINTING_DEFAULT_SCRL_VAL 80

&mt { 
    flavor = "balanced"; 
    tapping-term-ms = <200>;
    quick-tap-ms = <150>; 
};

&lt {
    flavor = "balanced";
    tapping-term-ms = <200>; 
    quick-tap-ms = <150>; 
};


/ {
    behaviors {
      scroll_up_down: behavior_sensor_rotate_mouse_wheel_up_down {
          compatible = "zmk,behavior-sensor-rotate";
          label = "ENCODER_MSC_DOWN_UP";
          #sensor-binding-cells = <0>;
          bindings = <&msc SCRL_DOWN>, <&msc SCRL_UP>;
          tap-ms = <20>;
      };

      tab_slide: behavior_sensor_rotate_tab_slide {
          compatible = "zmk,behavior-sensor-rotate";
          label = "ENCODER_TAB_SLIDE";
          #sensor-binding-cells = <0>;
          bindings = <&kp LA(LG(RIGHT_ARROW))>, <&kp LA(LG(LEFT_ARROW))>;
          tap-ms = <20>;
      };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&kp ESCAPE                                                                                                                                                &kp BACKSPACE

&kp ESCAPE          &kp Q        &kp E      &kp U         &kp P &none &none &kp D        &kp T         &kp R       &lt 5 W       &mkp MB1

&mt LSHIFT TAB      &lt 3 O        &lt 2 A      &lt 1 I &mt LCTRL F &none &none &mt RCTRL H  &lt 1 Y         &lt 2 K       &lt 3 S       &mt LEFT_SHIFT B

&lt 4 MINUS    &mt LGUI X   &mt LALT C &mt LSHIFT V  &mt LCTRL L &none &none &mt RCTRL N &mt RSHIFT M  &mt RALT G  &mt RGUI J  &lt 4 Z

&kp LCTRL  &kp LEFT_ALT  &kp LEFT_COMMAND  &kp LEFT_SHIFT  &lt 4 SPACE  &kp LG(SPACE) &kp ENTER &lt 3 BACKSPACE                         &lt 2 ESCAPE  &kp RIGHT_BRACKET
            >;

            sensor-bindings = <
                &inc_dec_kp RIGHT_ARROW LEFT_ARROW
                &scroll_up_down
            >;
        };

        1 {
            bindings = <
&trans                                                                                                                       &trans

&kp 0x38     &none      &kp UP     &none       &none &trans &trans &kp TAB          &kp UP          &kp N8        &kp N9         &mkp MB2

&kp JP_SEMI  &kp LEFT   &kp GRAVE  &kp GRAVE   &kp MINUS &trans &trans &kp BACKSPACE  &kp SPACE       &kp TAB       &kp ENTER      &kp COMMA

&kp JP_COLON &none &none &none &none &trans &trans &kp DELETE  &kp N1 &kp N2 &kp N3 &mt LCTRL PERIOD

&kp LCTRL  &kp LEFT_ALT  &kp LEFT_COMMAND  &kp LEFT_SHIFT  &trans  &trans &trans  &mo 3                       &trans    &trans
            >;

            sensor-bindings = <
                &inc_dec_kp RIGHT_ARROW LEFT_ARROW
                &scroll_up_down
            >;
        };

        2 {
            bindings = <
&trans                                                                                          &trans
&none        &kp JP_LT      &kp JP_EQUAL   &kp JP_RT  &none &trans &trans &none &kp JP_PLUS     &none        &kp JP_SLASH  &mkp MB3

&none        &kp JP_LPAR    &kp JP_AT      &kp JP_RPAR   &kp MINUS &trans &trans &kp JP_QMARK   &kp ENTER  &kp DOUBLE_QUOTES &kp LS(0x87)  &kp LS(0x1e)

&none        &kp JP_LBRC    &none          &kp JP_RBRC &none &trans &trans &kp DELETE          &none           &none         &none         &none
&kp F12     &trans  &trans  &trans  &trans  &trans      &trans  &trans                  &trans  &trans
            >;

            sensor-bindings = <
                &inc_dec_kp RIGHT_ARROW LEFT_ARROW
                &scroll_up_down
            >;
        };

        3 {
            bindings = <
&trans                                                                                                                                                                                 &trans
&none        &kp HOME   &kp UP     &kp PAGE_UP      &none &trans &trans &kp TAB          &kp N7          &kp N8        &kp N9         &mkp MB3

&none        &kp LEFT   &kp DOWN   &kp RIGHT        &none &trans &trans &kp BACKSPACE  &kp N4          &mt RGUI N5        &kp N6         &kp ENTER

&none        &kp END    &none      &kp PAGE_DOWN    &none &trans &trans &kp N0         &kp N1          &kp N2        &kp N3         &mt LCTRL PERIOD
&trans     &trans                  &trans          &trans                   &trans             &trans      &trans  &trans                                         &trans               &trans
            >;

            sensor-bindings = <
                &inc_dec_kp RIGHT_ARROW LEFT_ARROW
                &scroll_up_down
            >;
        };

         4 {
            bindings = <
&trans                                                                                                                                                                  &trans
&kp F1  &kp F2  &kp F3  &kp F4  &kp F5 &trans &trans &kp F6  &kp F7  &kp F8  &kp F9  &kp F10

&none   &none   &kp JP_AT   &none   &none &trans &trans &none   &none   &none   &kp JP_HASH   &none

&mt LEFT_SHIFT NUMBER_0  &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3 &kp PERIOD &trans &trans  &kp NUMBER_0     &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp EQUAL
&trans                   &trans        &trans        &trans                &trans        &trans      &trans  &kp LEFT_SHIFT                               &trans        &trans
            >;

            sensor-bindings = <
                &inc_dec_kp RIGHT_ARROW LEFT_ARROW
                &scroll_up_down
            >;
        };

        5 {
            bindings = <
&trans                                                                                       &trans
&kp F1  &msc SCRL_RIGHT  &mmv MOVE_UP     &msc SCRL_UP  &kp F5 &trans &trans &kp F1  &kp F2  &kp F3  &kp F4  &kp F5

&none   &mmv MOVE_LEFT   &mmv MOVE_DOWN   &mmv MOVE_RIGHT &none &trans &kp F13 &kp F6  &kp F7  &kp F8  &kp F9  &kp F10

&trans  &msc SCRL_LEFT   &trans           &msc SCRL_DOWN &trans &trans &trans &trans  &trans  &trans  &trans  &kp F11
&trans  &trans  &trans  &trans  &trans  &trans      &trans   &trans                  &trans  &kp F12
            >;

            sensor-bindings = <
                &inc_dec_kp RIGHT_ARROW LEFT_ARROW
                &scroll_up_down
            >;
        };

        BT {
            bindings = <
&trans                                                                                                                                      &trans
&kp LG(Q)      &kp LC(W)  &trans     &trans     &trans  &trans      &trans  &bt BT_PRV  &bt BT_NXT  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4
&kp LG(LS(Z))  &trans     &kp LC(C)  &trans     &trans  &trans      &trans  &trans      &trans      &trans        &trans        &trans
&kp LG(Z)      &kp LG(X)  &kp LG(C)  &kp LG(V)  &trans  &trans      &trans  &trans      &trans      &trans        &trans        &trans
&trans         &trans     &trans     &trans     &trans  &trans      &trans  &trans                                &trans        &trans
            >;

            sensor-bindings = <
                &inc_dec_kp RIGHT_ARROW LEFT_ARROW
                &scroll_up_down
            >;
        };
    };
};
